<Window x:Class="WpfAppTPAP.Configuration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfAppTPAP"
        mc:Ignorable="d"
        Title="Configuration" Height="450" Width="800">
    <Grid>
        <DataGrid AutoGenerateColumns="False" 
          Height="365" 
          HorizontalAlignment="Left" 
          Name="dataGrid1" 
          VerticalAlignment="Top" 
          Width="387" Margin="10,10,0,0">
            <DataGrid.Columns >
                <DataGridTextColumn Binding="{Binding Path=A}" MinWidth="50" />
                <DataGridTextColumn Binding="{Binding Path=B}" MinWidth="50" />
                <DataGridTextColumn Binding="{Binding Path=C}" MinWidth="50" />
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
